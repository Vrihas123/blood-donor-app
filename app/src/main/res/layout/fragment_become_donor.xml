<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.betterthannoobs.codeutsava.hackathon.blooddonorapp.fragment.HospitalBloodBankFragment">


    <android.support.v7.widget.Toolbar
        android:id="@+id/become_donor_toolbar"
        style="@style/HeaderBar"
        android:layout_width="match_parent"
        android:layout_height="56dp">

    </android.support.v7.widget.Toolbar>

    <ProgressBar
        android:id="@+id/progress_bar_become_donor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/txt_become_donor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Success true or false message"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorPrimary"/>

</LinearLayout>
