<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.betterthannoobs.codeutsava.hackathon.blooddonorapp.activity.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:textAlignment="center"
        android:textSize="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_first_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/input_first_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:imeOptions="actionNext"
            android:maxEms="20" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_last_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/input_last_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:imeOptions="actionNext"
            android:maxEms="20" />
    </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_user_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/input_user_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="User Name"
                android:imeOptions="actionNext"
                android:maxEms="20" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/input_password"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:imeOptions="actionNext"
                android:maxEms="20" />
        </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_blood_group"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/input_blood_group"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Blood Group"
            android:imeOptions="actionNext"
            android:maxEms="20" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_contact"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/input_contact"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="10"
            android:maxEms="20" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_city"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/input_city"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="City"
            android:imeOptions="actionNext"
            android:maxEms="20" />
    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_state"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/input_state"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="State"
            android:imeOptions="actionNext"
            android:maxEms="20" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_address"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/input_address"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:imeOptions="actionNext"
            android:maxEms="20" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_age"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/input_age"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Age (in years)"
            android:imeOptions="actionNext"
            android:maxEms="20" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_weight"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/input_weight"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Weight (in kg)"
            android:imeOptions="actionNext"
            android:maxEms="20" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_gender"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/input_gender"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Gender"
            android:imeOptions="actionNext"
            android:maxEms="20" />
    </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/bt_register"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Register"
            android:textAllCaps="false"
            />

    </LinearLayout>
</ScrollView>
