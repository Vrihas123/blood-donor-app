<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_donor_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="4dp">

            <TextView
                android:id="@+id/txt_donor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donor name"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/txt_donor_blood_grp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donor blood grp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/txt_donor_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donor gender"
                android:textSize="20dp"
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/txt_donor_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donor address"
                android:textSize="20dp"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txt_donor_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donor contact"
                android:textSize="20dp"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>