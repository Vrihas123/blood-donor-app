<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_blood_bank_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_blood_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood bank name"
                android:textSize="20dp"
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/txt_blood_bank_grp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood bank blood grp"
                android:textSize="20dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txt_blood_bank_units"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood bank units"
                android:textSize="20dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txt_blood_bank_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood bank city"
                android:textSize="20dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txt_blood_bank_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood bank state"
                android:textSize="20dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txt_blood_bank_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood bank address"
                android:textSize="20dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txt_blood_bank_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood bank contact"
                android:textSize="20dp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>